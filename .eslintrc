{
  "parserOptions": {
      "ecmaVersion": 7,
      "sourceType": "module",
      "ecmaFeatures": {
          "jsx": true,
      }
  },
  "rules": {
    "semi": 2,
    "quotes": [1, "single", {"avoidEscape": true, "allowTemplateLiterals": true} ],
    "comma-dangle": [2, "only-multiline"],
    "no-cond-assign": 1,
    "no-console": 0,
    "no-constant-condition": 1,
    "no-control-regex": 1,
    "no-debugger": 1,
    "no-dupe-args": 1,
    "no-dupe-keys": 1,
    "no-duplicate-case": 1,
    "no-empty-character-class": 1,
    "no-empty": 1,
    "no-ex-assign": 1,
    "no-extra-boolean-cast": 1,
    "no-extra-semi": 1,
    "no-func-assign": 1,
    "no-inner-declarations": 1,
    "no-invalid-regexp": 1,
    "no-irregular-whitespace": 1,
    "no-negated-in-lhs": 1,
    "no-obj-calls": 1,
    "no-regex-spaces": 1,
    "no-sparse-arrays": 1,
    "no-unreachable": 1,
    "use-isnan": 1,
    "valid-typeof": 1,
    "no-fallthrough": 1,
    "no-octal": 1,
    "no-redeclare": 1,
    "no-delete-var": 1,
    "no-undef": 1,
    "no-unused-vars": 0,
    "no-mixed-spaces-and-tabs": 2,
  },
  "env": {
    "browser": true,
    "node": true,
  },
  "globals": {
    "React": true,
    "ReactDOM": true,
    "$": true,
    "jQuery": true,
  },
}
